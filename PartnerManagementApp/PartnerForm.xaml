<Window x:Class="PartnerManagementApp.PartnerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Партнер" Height="490" Width="400">
    <Grid Margin="10">
        <StackPanel>
            
            <Label Content="Название"/>
            <TextBox x:Name="NameBox" Margin="0,5"/>

            <Label Content="Тип партнера"/>
            <ComboBox x:Name="TypeBox" Margin="0,5">
                <ComboBoxItem Content="Оптовик"/>
                <ComboBoxItem Content="Розничный"/>
            </ComboBox>

            <Label Content="Рейтинг"/>
            <TextBox x:Name="RatingBox" Margin="0,5"/>

            <Label Content="Адрес"/>
            <TextBox x:Name="AddressBox" Margin="0,5"/>

            <Label Content="ФИО директора"/>
            <TextBox x:Name="DirectorBox" Margin="0,5"/>

            <Label Content="Телефон"/>
            <TextBox x:Name="PhoneBox" Margin="0,5"/>

            <Label Content="Email"/>
            <TextBox x:Name="EmailBox" Margin="0,5"/>

            <Button Content="Сохранить" Click="Save_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
