<Window x:Class="PartnerManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список партнеров" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Добавить партнера" Width="150" Margin="0,0,0,10" Click="AddPartner_Click"/>
            <DataGrid x:Name="PartnerGrid" AutoGenerateColumns="False" Height="300"
                      MouseDoubleClick="PartnerGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
